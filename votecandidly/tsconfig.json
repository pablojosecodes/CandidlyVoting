{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  // "include": ["./src/**/*.tsx", "./src/**/*.ts", ""]
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "src/jest.config.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "cypress/support/commands.js",
    "cypress/e2e/home_page.cy.js",
    "__tests__/app/auth.test.js",
    "cypress/e2e/app.cy.js"
  ],
  "exclude": [
    "cypress.config.ts",
    "cypress",
    "node_modules"
  ]
}